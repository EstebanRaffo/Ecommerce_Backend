{{#if isAdmin}}
    <h2>Admin: {{email}}</h2>
    <p>Rol: {{rol}}</p>
{{else}}
    <h2>Bienvenid@ {{first_name}} {{last_name}}</h2>
    <div>
        <p>Email: {{email}}</p>
        <p>Edad: {{age}}</p>
        <p>Rol: {{rol}}</p>
    </div>
{{/if}}
<hr>
<h2>Productos</h2>

{{#each products}}
    <div>
        Id: {{this._id}} <br> Producto: {{this.title}}, Precio: {{this.price}} 
        <button onclick="addToCart(`{{this._id}}`)">Agregar al carrito</button>
    </div>
{{/each}}
{{#if hasPrevPage}}
    <a href="{{prevLink}}">Anterior</a>
{{/if}}
{{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente</a>
{{/if}}
<script src="/js/products.js"></script>